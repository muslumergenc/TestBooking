@model List<SanProject.Domain.User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div id="user_info_tablediv">
<table id="users_table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Registry Date</th>
            <th>Active Status</th>
            <th>Deletion Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RegistryDate.ToShortDateString()</td>
                @if(user.IsActive){
                    <td class="active_user">Yes</td>
                }
                else{
                    <td class="inactive_user">No</td>
                }
                @if(!user.IsDeleted){
                    <td class="active_user">No</td>
                }
                else{
                    <td class="inactive_user">Yes</td>
                }
                
                <td>
                    <a asp-action="Edit" asp-route-id=@user.Id >Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id=@user.Id >Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <div id="add_user_anchordiv">
        <a asp-action="Registration" id="add_user_anchor">Add User</a>
    </div>
    
</table>
</div>